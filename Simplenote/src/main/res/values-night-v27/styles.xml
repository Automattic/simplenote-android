<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Simplestyle" parent="Base.Theme.Simplestyle">
        <item name="android:navigationBarColor">?attr/mainBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Simplestyle.About" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorEdgeEffect">@android:color/white</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/item_default_dark</item>
        <item name="colorControlHighlight">@color/item_default_dark</item>
        <item name="colorPrimary">@color/item_default_dark</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="toolbarColor">@color/blue</item>
    </style>

    <style name="Theme.Simplestyle.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">?attr/sheetBackgroundColor</item>
        <item name="android:navigationBarColor">?attr/sheetBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
        <item name="colorAccent">@color/item_default_dark</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
    </style>

    <style name="Theme.Transparent.Dialog" parent="Theme.Transparent">
        <item name="android:navigationBarColor">@color/background_dark_navigation</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="statusBarBackground">@android:color/transparent</item>
    </style>

</resources>

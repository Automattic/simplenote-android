<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/widget_margin"
        android:layout_marginBottom="@dimen/widget_divider_height">


        <ImageView
            android:layout_width="@dimen/widget_icon_size_normal"
            android:layout_height="@dimen/widget_icon_size_normal"
            android:id="@+id/ib_widget_app_icon"
            android:src="@drawable/ab_icon_logo" />

        <com.automattic.simplenote.widget.SearchNoteAutocompleteTextView
            android:id="@+id/actv_search"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_holo"
            android:textColor="@color/simplenote_light_grey"/>

        <ImageButton
            android:layout_width="@dimen/widget_icon_size_normal"
            android:layout_height="@dimen/widget_icon_size_normal"
            android:layout_marginLeft="@dimen/widget_margin"
            android:id="@+id/btn_select_item"
            android:src="@drawable/ic_create_blue_24dp"
            android:onClick="onGo"/>

    </LinearLayout>
</LinearLayout>
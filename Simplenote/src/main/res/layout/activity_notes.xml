<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/main_parent_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar">
        </include>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/note_fragment_container"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:animateLayoutChanges="true"
                android:weightSum="10">
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/drawerBackgroundColor"
        android:elevation="@dimen/navigation_elevation"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="16dp"
            android:id="@+id/sustainer_banner"
            android:layout_margin="8dp"
            android:background="@drawable/bg_iap_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/iap_logo"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_simplenote_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/iap_title"
                android:layout_toEndOf="@+id/iap_logo"
                android:textColor="@android:color/white"
                android:text="@string/iap_banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:layout_below="@+id/iap_title"
                android:layout_toEndOf="@+id/iap_logo"
                android:textColor="@android:color/white"
                android:text="@string/iap_banner_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/drawerBackgroundColor"
            app:elevation="0dp"
            app:insetForeground="@android:color/transparent"
            app:itemShapeFillColor="?attr/drawerBackgroundSelector"
            app:theme="@style/NavigationMenuItem" />

        <View
            android:id="@+id/empty_tags_hint_divider"
            android:background="?attr/dividerColor"
            android:layout_height="@dimen/divider_height"
            android:layout_width="match_parent" />

        <com.automattic.simplenote.widgets.RobotoRegularTextView
            android:id="@+id/empty_tags_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/navigation_margin"
            android:layout_marginStart="@dimen/navigation_margin"
            android:paddingBottom="@dimen/padding_large"
            android:paddingTop="@dimen/padding_large"
            android:text="@string/empty_tags_hint" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

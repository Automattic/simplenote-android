<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/listBackgroundSelector"
              android:paddingLeft="@dimen/padding_large"
              android:paddingRight="@dimen/padding_large"
              android:paddingTop="@dimen/padding_small"
              android:paddingBottom="@dimen/padding_small"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/note_pin"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="-3dp"
                android:scaleType="centerInside"
                android:tint="@color/simplenote_dark_grey"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_item_list_default_pin_active"/>

        <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:text="note_title"
                android:textColor="?attr/noteTitleColor"
                android:textSize="22sp"
                android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/note_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:layout_marginTop="-2dp"
                android:text="note_content"
                android:textColor="?attr/notePreviewColor"
                android:textSize="18sp"
                android:ellipsize="end" />
    </LinearLayout>

</LinearLayout>
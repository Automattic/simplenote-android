<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/listBackgroundSelector"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/note_list_item_padding_bottom"
    android:paddingTop="@dimen/note_list_item_padding_top">

    <ImageView
        android:id="@+id/note_published"
        android:contentDescription="@string/published"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/note_title"
        android:layout_height="@dimen/icon_published"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_width="@dimen/icon_published"
        android:src="@drawable/ic_feed_24dp"
        android:tint="?attr/notePreviewColor"
        android:visibility="gone"
        tools:tint="@color/text_content_light"
        tools:visibility="visible">
    </ImageView>

    <com.automattic.simplenote.widgets.RobotoRegularTextView
        android:id="@+id/note_date"
        android:layout_alignBaseline="@id/note_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textColor="?attr/notePreviewColor"
        android:textSize="@dimen/text_content"
        android:visibility="gone"
        tools:text="Aug 15"
        tools:visibility="visible">
    </com.automattic.simplenote.widgets.RobotoRegularTextView>

    <com.automattic.simplenote.widgets.RobotoMediumTextView
        android:id="@+id/note_title"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginStart="@dimen/list_padding_left"
        android:layout_toStartOf="@id/note_date"
        android:layout_width="match_parent"
        android:lines="1"
        android:singleLine="true"
        android:textColor="?attr/noteTitleColor"
        android:textSize="@dimen/text_title"
        tools:text="Three-line item">
    </com.automattic.simplenote.widgets.RobotoMediumTextView>

    <com.automattic.simplenote.widgets.RobotoRegularTextView
        android:id="@+id/note_content"
        android:ellipsize="end"
        android:layout_below="@id/note_title"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginStart="@dimen/list_padding_left"
        android:layout_toStartOf="@id/note_published"
        android:layout_width="match_parent"
        android:lineSpacingExtra="@dimen/line_spacing"
        android:maxLines="2"
        android:textColor="?attr/notePreviewColor"
        android:textSize="@dimen/text_content"
        tools:text="The first few times he tried to climb up on\nthe smooth chest of drawers.">
    </com.automattic.simplenote.widgets.RobotoRegularTextView>

</RelativeLayout>

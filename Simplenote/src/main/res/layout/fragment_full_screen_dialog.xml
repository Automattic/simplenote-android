<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/full_screen_dialog_fragment_toolbar"
        android:background="?attr/toolbarColor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="@dimen/toolbar_title_keyline"
        app:popupTheme="?attr/toolbarPopupTheme"
        app:theme="@style/Widget.AppCompat.SearchView.ActionBar"
        style="@style/ToolbarTheme">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/full_screen_dialog_fragment_content"
        android:inflatedId="@+id/full_screen_dialog_fragment_content"
        android:layout_below="@id/full_screen_dialog_fragment_toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </FrameLayout>

</RelativeLayout>

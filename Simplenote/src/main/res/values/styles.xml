<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="UntitledNoteAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/notePreviewColor</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/simplenote_blue_light</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MainScreenTutorial" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e62291DB</item>
        <item name="sv_buttonText">Skip tutorial</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="StandardTutorial" parent="ShowcaseView">
    <item name="sv_backgroundColor">#e62291DB</item>
    <item name="sv_buttonText">Got it!</item>
    <item name="sv_titleTextAppearance">@style/CustomTitle</item>
</style>


</resources>
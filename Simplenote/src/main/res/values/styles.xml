<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ActionBarTabStyle.Simplestyle" parent="@android:style/Widget.Material.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_simplestyle</item>
    </style>

    <style name="ActionMode.Simplestyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/actionModeBackgroundColor</item>
        <item name="subtitleTextStyle">@style/Simplestyle.ActionModeTitleTextStyle</item>
        <item name="titleTextStyle">@style/Simplestyle.ActionModeTitleTextStyle</item>
    </style>

    <style name="Base.Theme.Simplestyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_simplestyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Simplestyle</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_content_copy_white_24dp</item>
        <item name="android:actionModeCutDrawable">@drawable/ic_content_cut_white_24dp</item>
        <item name="android:actionModePasteDrawable">@drawable/ic_content_paste_white_24dp</item>
        <item name="android:actionModeSelectAllDrawable">@drawable/ic_select_all_white_24dp</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Simplestyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Simplestyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem.Simplestyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.Simplestyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarTextColor">@color/simplenote_blue</item>
        <item name="actionModeBackgroundColor">@color/simplenote_blue</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_24dp</item>
        <item name="actionModeStyle">@style/ActionMode.Simplestyle</item>
        <item name="actionModeTextColor">@color/white</item>
        <item name="colorAccent">@color/simplenote_blue</item>
        <item name="colorPrimary">@color/simplenote_toolbar_light</item>
        <item name="colorPrimaryDark">@color/lightgrey</item>
        <item name="dividerColor">@color/simplenote_light_list_divider</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="editorSearchHighlightBackgroundColor">#FF4F91CC</item>
        <item name="editorSearchHighlightForegroundColor">#FFEEF3F8</item>
        <item name="fabColor">@color/simplenote_blue</item>
        <item name="fabIconColor">@color/white</item>
        <item name="hintTextColor">@color/mediumgrey</item>
        <item name="iconTintColor">@color/simplenote_light_grey</item>
        <item name="listBackgroundSelector">@drawable/list_background_simplestyle</item>
        <item name="listDividerDrawable">@drawable/list_divider</item>
        <item name="listSearchHighlightBackgroundColor">#FFEEF3F8</item>
        <item name="listSearchHighlightForegroundColor">#FF4F91CC</item>
        <item name="mainBackgroundColor">@color/white</item>
        <item name="noteEditorTextColor">@color/simplenote_dark_grey</item>
        <item name="notePinColor">@color/simplenote_dark_grey</item>
        <item name="notePreviewColor">@color/simplenote_text_preview</item>
        <item name="noteTitleColor">@color/simplenote_dark_grey</item>
        <item name="pinIconSelector">@drawable/pin_bg_selector</item>
        <item name="placeholderLogoColor">@color/verylightgrey</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="settingsTextColor">@color/black</item>
        <item name="tagChipBackgroundDrawable">@drawable/tag_bg</item>
        <item name="tagChipShadowColor">@color/white</item>
        <item name="tagChipTextColor">@color/simplenote_tag_chip_text_color</item>
        <item name="toolbarColor">@color/white</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/simplenote_blue</item>
        <item name="spinBars">true</item>
    </style>

    <style name="DropDownListView.Simplestyle" parent="@android:style/Widget.Material.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_simplestyle</item>
    </style>

    <style name="DropDownTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FlatButton.Simplestyle" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/simplenote_blue</item>
        <item name="colorControlHighlight">@color/simplenote_blue_accent</item>
    </style>

    <style name="PopupMenu.Simplestyle" parent="@android:style/Widget.Material.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_simplestyle</item>
    </style>

    <style name="ProgressBar.Simplestyle" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_simplestyle</item>
    </style>

    <style name="Theme.Simplestyle" parent="Base.Theme.Simplestyle">
    </style>

    <style name="Theme.Simplestyle.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/simplenote_toolbar_light</item>
        <item name="colorPrimaryDark">@color/lightgrey</item>
        <item name="colorAccent">@color/simplenote_blue</item>
        <item name="android:background">?attr/mainBackgroundColor</item>
    </style>

    <style name="Theme.Simplestyle.BottomSheetDialogText" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:textColor">@color/simplenote_dark_grey</item>
    </style>

    <style name="Theme.Simplestyle.NoActionBar" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">?attr/mainBackgroundColor</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?attr/actionBarTextColor</item>
        <item name="android:textColorSecondary">?attr/actionBarTextColor</item>
    </style>

    <style name="Simplestyle.IndeterminateProgress" parent="@android:style/Widget.Material.Light.ProgressBar">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="SpinnerDropDownItem.Simplestyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownTextAppearance</item>
    </style>

    <style name="SpinnerItem.Simplestyle" parent="@android:style/Widget.Material.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemTextAppearance</item>
    </style>

    <style name="SpinnerItemTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/simplenote_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Simplestyle.ActionModeTitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/actionModeTextColor</item>
    </style>

    <style name="Simplestyle.ActionModeSubtitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Simplestyle.About">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/simplenote_blue_accent</item>
        <item name="actionBarTextColor">@color/white</item>
        <item name="colorPrimaryDark">@color/simplenote_blue_dark</item>
        <item name="toolbarColor">@color/simplenote_blue_accent</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Simplestyle.Widget" parent="@android:style/Theme.Material">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Simplestyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Simplestyle</item>
    </style>

    <style name="UntitledNoteAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/notePreviewColor</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>

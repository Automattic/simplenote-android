<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="PasscodeEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/passcodelock_field_text_color</item>
        <item name="android:textColorHint">@color/passcodelock_field_hint_text_color</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="PasscodeKeyboardButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/passcodelock_button_text_color</item>
        <item name="android:textSize">@dimen/passcodelock_button_text_size</item>
        <item name="colorAccent">@color/gray_e5</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="PasscodeKeyboardImageStyle" parent="@style/PasscodeKeyboardButtonStyle">
        <item name="android:tint">@color/passcodelock_button_image_color</item>
    </style>

</resources>
